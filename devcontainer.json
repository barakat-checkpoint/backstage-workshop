{
  "name": "Dev container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "node --version && npm --version && docker info",
  "remoteUser": "root",
  "extensions": [
    "ms-vscode.remote-containers"
  ],
  "runArgs": [
    "--privileged",
    "--name", "dind-container"
  ]
}
